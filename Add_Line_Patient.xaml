<Window x:Class="Med.Add_Line_Patient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Med"
        mc:Ignorable="d"
        Title="Add_Line_Patient" Height="450" Width="800">
    <Grid Background="#FF4FC7FF">
        <TextBox x:Name="Anamnesis" Text="Мигрень" HorizontalAlignment="Left" Height="172" Margin="161,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" FontSize="16"/>
        <TextBlock x:Name="Problems" HorizontalAlignment="Left" Margin="161,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="16" Width="308" Text="Кратко опишите проблему"/>
        <Button x:Name="bCancel" HorizontalAlignment="Left" Margin="161,275,0,0" VerticalAlignment="Top" Width="160" Height="37" Background="White" FontSize="16" Click="CancelLine" Content="Отмена"/>
        <Button x:Name="bAddLine" HorizontalAlignment="Left" Margin="469,275,0,0" VerticalAlignment="Top" Width="160" Height="37" Background="White" FontSize="16" Click="AddLine" Content="Подтвердить"/>
    </Grid>
</Window>
